<%- include('../partials/header.ejs') %>
<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <h2>Series</h2>
        <p class="lead">
          Todas as séries cadastradas
          <a href="/series/nova" class="btn btn-primary ml-5">Nova Série</a>
        </p>
        <table class="table table-hover">
          <% series.forEach(serie => { %>
          <tr>
            <td>
              <%= serie.name %>
            </td>
            <td>
              <%= labels.filter(label => label.id === serie.status)[0].name %>
            </td>
            <td>
              <a
                class="btn btn-secondary"
                href="/series/editar/<%= serie._id %>"
                >Editar</a
              >
            </td>
            <td>
              <a class="btn btn-danger" href="/series/excluir/<%= serie._id %>"
                >Excluir</a
              >
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer.ejs') %>
