<%- include('../partials/header.ejs') %>
<section id="about">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Editar Série</h2>
            <form method="POST" action="" class="form">
              <div class="form-group">
                <input
                  type="text"
                  placeholder="Informe o nome da série"
                  class="form-control"
                  name="name"
                  id=""
                  value="<%= serie.name %>"
                />
                <% if(errors && errors.indexOf('name') >=0) {%>
                  <div class="alert alert-danger" role="alert">
                    <strong>Algo deu errado!</strong> Insira o nome da série e tente novamente.
                  </div>
               <% } %>
              </div>

              <div class="form-group">
                <label for="status">Situação:</label>
                <select class="form-control" name="status" id="status">
                  <% labels.forEach(label =>{ %>
                  <option value="<%= label.id %>" <% if(label.id === serie.status ){%> selected="selected"<%}%> > <%=label.name %> </option>
                  <% }) %>
                </select>
              </div>
              <button type="submit" class="btn btn-danger btn-block">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../partials/footer.ejs') %>
